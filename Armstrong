public class Armstrong 
{
    public static void main(String[] args) 
    {
        int num = 370, number, rem, res = 0;

        number = num;
        while (number != 0)
        {
            rem = number % 10;
            res = res + rem*rem*rem;
            number /= 10;
        }

        if(res == num)
            System.out.println(num + " is an Armstrong number");
        else
            System.out.println(num + " is not an Armstrong number");
    }
}
